<%- include('layout/header') %>
    <div class="container">
        <div class="row my-4">
            <div class="col-lg-12">
                <% if (message) { %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
                        <strong>
                            <%= message.message %>
                        </strong>
                    </div>
                    <% } %>
                        <div class="table-responsive">
                            <% if (productos !='' ) { %>
                                <table class="table table-condensed mt-4 text-center  table-dark table-striped table-bordered table-responsive" border="1">
                                    <thead>
                                        <tr class="table-dark">
                                            <th>Id</th>
                                            <th>Imagen</th>
                                            <th>Producto</th>
                                            <th>Marca</th>
                                            <th>Tipo</th>
                                            <th>Stock</th>
                                            <th>Precio</th>                                            
                                            <th>Accion</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% productos.forEach((row, index)=> { %>                                            
                                            <tr class="align-middle">
                                                <td>
                                                    <%= index %>
                                                </td>
                                                <td><img src="<%= row.image %>" width="50" class="img-thumbnail"></td>
                                                <td>
                                                    <%= row.producto %>
                                                </td>
                                                <td>
                                                    <%= row.marca %>
                                                </td>
                                                <td>
                                                    <%= row.tipo %>
                                                </td>
                                                <td>
                                                    <%= row.stock %>
                                                </td>
                                                <td>
                                                    <%= row.precio %>
                                                </td>                                                
                                                <td>
                                                    <a href="/edit/<%= row._id %>" class="text-success"><i
                                                            class="fas fa-edit fa-lg mx-1"></i></a>
                                                    <a href="/delete/<%= row._id %>" class="text-danger"><i
                                                            class="fas fa-trash fa-lg mx-1"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                                <% } else { %>

                                    <h1 class="text-center text-secondary mt-5">No hay productos encontrados :C</h1>

                                    <% } %>
                        </div>
            </div>
        </div>
    </div>
    <%- include('layout/footer') %>